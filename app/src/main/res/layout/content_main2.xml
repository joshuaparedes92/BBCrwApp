<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joshua.bbcrwapp.Main2Activity"
    tools:showIn="@layout/activity_main2">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your Technology Map"
        android:id="@+id/ytmTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#5783ea"
        android:textStyle="bold"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="TV/Internet Service Provider"
        android:id="@+id/ytm1TextView"
        android:layout_below="@+id/ytmTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ytm1Spinner"
        android:layout_below="@+id/ytmTextView"
        android:layout_toRightOf="@+id/ytm1TextView"
        android:layout_marginRight="300dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Internet Speed (Mb/s)"
        android:id="@+id/ytm2TextView"
        android:layout_below="@+id/ytm1Spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ytm2Spinner"
        android:layout_alignTop="@+id/ytm2TextView"
        android:layout_toRightOf="@+id/ytm2TextView"
        android:layout_toEndOf="@+id/ytm2TextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="How old is your Router? (Years)"
        android:id="@+id/ytm3textView"
        android:layout_below="@+id/ytm2TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ytm3spinner"
        android:layout_below="@+id/ytm2Spinner"
        android:layout_toRightOf="@+id/ytm3textView"
        android:layout_toEndOf="@+id/ytm3textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Max Speed of Current Router (Mb/s)"
        android:id="@+id/ytm4textView"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/ytm3spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Use the Space Below to map out all of the devices that will be a part of your home theater solution:"
        android:id="@+id/ConnectMaintextView"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/tv_stand"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/ConnectMaintextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView2"
        android:src="@drawable/access_point"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/ConnectMaintextView"
        android:layout_alignEnd="@+id/ConnectMaintextView" />


</RelativeLayout>

